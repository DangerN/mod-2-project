<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text-light form-group col-md-6">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", id:"name-text-field"%>
  </div>

  <div class="field text-light form-group col-md-9">
    <%= form.label :directions %>
    <%= form.text_area :directions , class:"form-control", rows:"7"%>
  </div>

  <div class="field text-light form-group col-md-8">
    <%= form.label :html_link, "Image Link" %>
    <%= form.text_field :html_link , class:"form-control"%>
  </div>

  <div class="actions col">
    <%= form.submit "Create Recipe", class: "btn btn-success"%>
  </div>
<% end %>
