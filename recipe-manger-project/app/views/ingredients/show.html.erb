<div class="container">
  <p id="notice"><%= notice %></p>
    <h1>Ingredient Details</h1>
  <p class="text-light">
    <strong>Name:</strong>
      <%= @ingredient.name %> <br>
      <strong>Description:</strong>
      <%= @ingredient.description %><br>
      <img src="<%= @ingredient.html_link %>" alt="Ingredient Image">
  </p>

  <div class="text-light">
    <%= link_to 'Edit', edit_ingredient_path(@ingredient), class: "text-light" %> |
    <%= link_to 'Back', ingredients_path, class: "text-light" %>
  </div>
</div>
