<!DOCTYPE html>
<html>
  <head>
    <title>RecipeMangerProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>




    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <a class="navbar-brand" href="/">Recipe Manager</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/recipes">Recipes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/ingredients">Ingredients</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/analytics">Analytics</a>
          </li>
        </ul>
      </div>
    </nav>


  </header>
  <body background="http://grandtheatrecompany.com/wp-content/uploads/2016/05/img_3.jpg">
    <%= yield %>
   <footer class="footer">
     <div class="container">
     <%= link_to "Recipes", recipes_path %>
     <%= link_to "Ingredients", ingredients_path %>
     <%= link_to "Users", users_path %>
     <%= link_to "Analytics", analytics_path %>
    </div>
   </footer>
  </body>
</html>
