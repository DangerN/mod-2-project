<div class="container">

<p id="notice"><%= notice %></p>

<h1 class="text-light">Users</h1>

<table>
  <thead>
    <tr>
      <th class="text-light">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="text-light"><%= user.name %></td>
        <div class="btn-group" id="user-index-button-group" data-toggle="buttons">
        <td><%= link_to 'Details', user, class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Change Name', edit_user_path(user), class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning btn-sm" %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-success" %>


</div>
